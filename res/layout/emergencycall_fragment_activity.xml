<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/fmBanner"
        layout="@layout/blank_activity" />

    <EditText
        android:id="@+id/searchEmergencyEdt"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:layout_marginBottom="5dp"        
        android:layout_height="wrap_content"
        android:layout_below="@+id/fmBanner"
        android:hint="@string/search_emergency_text" >
    </EditText>

    <ListView
        android:id="@+id/emergencyLv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchEmergencyEdt"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:dividerHeight="5sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

</RelativeLayout>