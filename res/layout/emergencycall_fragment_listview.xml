<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_emg_img"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/logoEmergencyIv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/hello_world"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/phoneEmergencyTv"
        android:layout_width="wrap_content"
        android:paddingTop="10dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/logoEmergencyIv"
        android:singleLine="true"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/nameEmergencyTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneEmergencyTv"
        android:layout_toRightOf="@+id/logoEmergencyIv"
        android:textColor="@color/grey_light"
        android:singleLine="true"
        android:textSize="12sp" />

</RelativeLayout>